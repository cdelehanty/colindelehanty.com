---
export interface Props {
	title: string
	items: string
}
const { title, items } = Astro.props
const elements = items.split('\n')
---

<div class="flex flex-col">
	<h2 class="mb-8 mt-0 text-xl font-normal text-primary">{title}</h2>
	<div class="prose max-w-none">
		{
			elements.map((element) => (
				<p class="my-0 whitespace-pre-wrap text-base font-normal text-primary">{element}</p>
			))
		}
	</div>
</div>

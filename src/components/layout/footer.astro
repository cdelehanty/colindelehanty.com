	<div class="flex flex-col gap-10">
		{
			footerLinks.slice(0, 1).map((section) => (
				<ul class="flex flex-col gap-2">
					<li class="mb-1 font-medium text-neutral-100">
						<a href={section.href}>{section.title}</a>
					</li>
					{section.items &&
						section.items.map((item) => (
							<li>
								<a
									href={item.href}
									class="block w-max text-sm text-neutral-400 transition-colors sm:hover:text-neutral-200"
								>
									{item.title}
								</a>
							</li>
						))}
				</ul>
			))
		}
	</div>
	<div class="flex flex-col gap-10">
		{
			footerLinks.slice(2, 3).map((section) => (
				<ul class="col flex flex-col gap-2">
					<li class="mb-1 font-medium text-neutral-100">{section.title}</li>
					{section.items &&
						section.items.map((item) => (
							<li>
								<a
									target="_blank"
									href={item.href}
									class="block w-max text-sm text-neutral-400 transition-colors sm:hover:text-neutral-200"

---
import { cn } from '@/lib/utils'
import BaseLayout from './base-layout.astro'
import Header from '@/components/layout/header.astro'
import CTASection from '@/components/sections/cta-section.astro'
import Footer from '@/components/layout/footer.astro'

type Props = {
	title: string
	description?: string
	mainClass?: string
}

const { title, description, mainClass }: Props = Astro.props
---

<BaseLayout title={title} description={description} bodyClass="relative">
	<Header />
	<main class={cn('', mainClass)}>
		<slot />
	</main>
	<!-- <CTASection /> -->
	<Footer />
</BaseLayout>

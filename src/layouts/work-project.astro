---
import MainLayout from './main-layout.astro'
import HeaderSection from '@/components/sections/header-section.astro'

const { data, slug } = Astro.props
const { title, description, cover } = data
---

<MainLayout title={title} description={description} cover={cover} mainClass="">
	<HeaderSection
		category={data.category}
		title={data.title}
		description={data.description}
		cover={data.cover}
		primary={{
			text: data.link?.text,
			href: data.link?.href
		}}
		slug={slug}
		slug={slug}
		animation={true}
	/>

	<article class="reveal animate-revealContent">
		<slot />
	</article>
</MainLayout>

{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": true,
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"types": ["astro/client"],
		"allowJs": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.astro",
		"src/types/**/*.d.ts" // Include the directory with your custom declarations
	]
}
